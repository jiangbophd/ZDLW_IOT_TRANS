<core:View controllerName="dlw.iot.transport.app.view.mainView"
	xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m"
	xmlns:viz="sap.viz.ui5.controls" xmlns:l="sap.ui.layout" xmlns:html="http://www.w3.org/1999/xhtml">
	<Page showHeader="false">
		<content>
			<l:Grid binding="{/PersonCollection}" class="sapUiSmallMarginTop"
				hSpacing="2" defaultSpan="L6 M6 S10">
				<l:content>
					<Image src="img/logo.png" width="100%">
						<layoutData>
							<l:GridData span="L3 M3 S8" linebreakL="true"
								linebreakM="true" linebreakS="true" />
						</layoutData>
					</Image>
					<VBox>
						<Text text="{i18n>truckDriverCockpit}" class="nameTitle" />
						<Image src="img/tempature.png" densityAware="false" width="{/imageWidth}">
							<layoutData>

							</layoutData>
						</Image>

					</VBox>
				</l:content>
			</l:Grid>
			<IconTabBar id="idIconTabBar" select="handleIconTabBarSelect"
				class="sapUiResponsiveContentPadding">
				<items>
					<IconTabFilter icon="sap-icon://temperature"
						iconColor="Positive" count="{/ProductCollectionStats/Counts/Weight/Ok}"
						text="{i18n>temperature}" key="temperature">
						<ScrollContainer height="100%" width="100%"
							horizontal="false" vertical="true" focusable="true">
							<viz:Popover id="idPopOver"></viz:Popover>
							<viz:VizFrame id="idVizFrameLine" uiConfig="{applicationSet:'fiori'}"
								vizType="line" width="100%" height="700px">
							</viz:VizFrame>
						</ScrollContainer>

					</IconTabFilter>
					<IconTabFilter icon="sap-icon://compare" iconColor="Positive"
						count="{/ProductCollectionStats/Counts/Weight/Heavy}" text="{i18n>humidity}"
						key="humidity" />
					<IconTabFilter icon="sap-icon://inventory" iconColor="Positive"
						count="{/ProductCollectionStats/Counts/Weight/Overweight}" text="{i18n>orders}"
						key="orders" />
					<IconTabFilter icon="sap-icon://map-2" iconColor="Positive"
						count="{/ProductCollectionStats/Counts/Weight/Overweight}" text="{i18n>map}"
						key="map" />
				</items>
			</IconTabBar>
		</content>
	</Page>
</core:View>